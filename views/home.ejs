<%- include("partials/header"); -%>
<div>
    <main id="page_main">
        <div id="pokemon_search_zone">
            <div>
                <h1 id="">Find a Pokemon</h1>
            </div>

            <div id="pokemon_search_container">
                <form id="pokemon_search_form" method="POST" action="/search">
                    <input id="pokemon_search_name" name="name" type="text" placeholder="Search" required autocomplete="off">
                    <button type="submit" id="pokemon_search_button"><i class="fa-solid fa-magnifying-glass"></i></button>
                </form>
            </div>
        </div>

        <% if (locals.found && locals.pokemonData) { %>
            <%- include("partials/pokemon_form"); -%>            
        <% } else if (!locals.found && locals.pokemonName) { %>
            <p>Unknown option for "<%= locals.pokemonName %>", try it again.</p>
        <% } %>

        <% if (locals.error) { %>
            <p>Error: <%= locals.error %></p>
        <% } %>
    </main>
</div>
<%- include("partials/footer"); -%>